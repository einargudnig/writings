{
  "name": "writing",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build && npm run kill-assets",
    "preview": "astro preview",
    "astro": "astro",
    "build-setup": "npm run serve-assets & npm run wait-for-assets",
    "serve-assets": "serve -p 3001 --no-port-switching ./src/images",
    "wait-for-assets": "wait-on -t 5000 http://localhost:3001/opengraph/og.png",
    "kill-assets": "kill-port 3001 || true"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^3.1.8",
    "@astrojs/rss": "^4.0.9",
    "@astrojs/tailwind": "^5.1.2",
    "@astrojs/vercel": "^7.8.2",
    "@fontsource/geist-mono": "^5.0.3",
    "@fontsource/geist-sans": "^5.0.3",
    "@radix-ui/react-icons": "^1.3.0",
    "@vercel/analytics": "^1.3.1",
    "@vercel/og": "^0.6.2",
    "astro": "^4.16.7",
    "date-fns": "^3.6.0",
    "geist": "^1.3.0",
    "gray-matter": "^4.0.3",
    "satori": "^0.10.14",
    "sharp": "^0.33.4",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.2",
    "@tailwindcss/typography": "^0.5.13",
    "@types/date-fns": "^2.6.0",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "kill-port": "^2.0.1",
    "postcss-apply": "^0.12.0",
    "serve": "^14.2.3",
    "wait-on": "^7.2.0"
  }
}
