---
import { tagMap, type ValidTags } from '../../../utils/blogTags';

type Props = {
  tag: ValidTags;
}


const { tag } = Astro.props;
---

<a href={new URL(tagMap[tag].href, Astro.site)} class={`rounded-full flex flex-row items-center px-2 ring-1 ring-slate-500 text-smoke-300`}><span class="px-1">{tag}</span></a>