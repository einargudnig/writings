---
import { formatDistanceToNow } from 'date-fns';

type Props = {
  datetime: string
}

const {datetime} = Astro.props
const relTime = formatDistanceToNow(new Date(datetime), { addSuffix: true });

---

<time class="font-mono text-sm text-neutral-500 tracking-tighter" datetime={datetime} title={datetime}>{relTime}</time>