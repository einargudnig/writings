---
import '../../src/styles/tailwind.css';
import Header from "../pages/components/Header.astro";
import Footer from "../pages/components/Footer.astro";
const pageTitle = "Home";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="antialiased mb-10 lg:mx-auto text-[#FFF] bg-[#1C1B1A]">
    <main class="container relative mx-auto mt-8 overflow-auto print:p-12">
    <Header />

    <slot />
    
    </main>
  </body>
</html>